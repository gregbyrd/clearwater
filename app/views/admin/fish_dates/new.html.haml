%h1 Add new date to season: #{current_season.year}

= form_tag admin_dates_path, method: :post do

  #newdate{data: {min_date: @start_date, max_date: @end_date,
                  default_date: @last_date}}
    = select_month(@start_date.month, use_short_month: true)
    = select_day(1)
    = select_year(@start_date.year,
                  start_year: @start_date.year,
                  end_year: @end_date.year)

  %p
    = label_tag :slots, "Number of Slots"
    = text_field_tag :slots, current_season.slot_limit, size: 4

  %p
    = submit_tag "Add Date"

