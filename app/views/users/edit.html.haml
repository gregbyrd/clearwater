%h1 Edit User Info

= form_tag user_path(@user), method: :patch do
  %p
    = label_tag :firstname, "First name"
    = text_field_tag :firstname, @user.firstname
  %p
    = label_tag :lastname, "Last name"
    = text_field_tag :lastname, @user.lastname
  %p
    = label_tag :phone, "Phone"
    = text_field_tag :phone, @user.phone
  %p
    = label_tag :password, "Password"
    = password_field_tag :password, nil
  %p
    = label_tag :password_confirm, "Password Confirm"
    = password_field_tag :password_confirm, nil


  %p
    = submit_tag "Update"

